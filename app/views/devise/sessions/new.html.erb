<section class="hero is-light">
  <div class="hero-body">
    <div class="columns">
      <div class="column is-half is-offset-one-quarter">
        <h2><%= t('.sign_in') %></h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, class: "label" %><br />
            <div class="control">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
            </div>
          </div>

          <div class="field">
            <%= f.label :password, class: "label" %><br />
            <div class="control">
              <%= f.password_field :password, autocomplete: "off", class: "input" %>
            </div>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me, class: "input" %>
              <%= f.label :remember_me, class: "label" %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit t('.sign_in'), class: "button is-link" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

        </div>
      </div>
  </div>
</section>