<section class="hero is-light">
  <div class="hero-body">
    <div class="columns">
      <div class="column is-half is-offset-one-quarter">
        <div class="page-header">
          <%%= link_to <%= index_helper %>_path, class: 'button is-link' do %>
            <span class="fa fa-list-alt"></span>
          <%%= t('d.Back') %>
          <%% end %>
          <%%= link_to edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: 'button is-link' do %>
            <span class="fa fa-pencil"></span>
            <%%= t('d.Edit') %>
          <%% end %>
          <h1><%%= t('d.Show') %> <%%= <%= human_name %>.model_name.human %> </h1>
        </div>

        <dl class="dl-horizontal">
          <%- attributes.each do |attribute| -%>
          <dt><%%= <%= human_name %>.human_attribute_name('<%=attribute.name%>') %>:</dt>
          <dd><%%= @<%= singular_table_name %>.<%= attribute.name %> %></dd>

          <%- end -%>
        </dl>
      </div>
    </div>
  </div>
</section>
