<section class="hero is-light">
  <div class="hero-body">
    <div class="columns is-multiline">
      <div class="column">
        <%%= link_to new_<%= singular_table_name %>_path, class: 'button is-link' do %>
          <span class="fa fa-plus"></span>
        <%%= t('d.New') %> <%%= <%= human_name %>.model_name.human %>
        <%% end %>
        <h1><%%= t('d.Listing') %> <%%= <%= human_name %>.model_name.human %></h1>
      </div>
      <div class="column is-full table-wrapper">
        <table class="table is-fullwidth">
          <thead>
          <tr>
            <% attributes.each do |attribute| -%>
                <th><%%= <%= human_name %>.human_attribute_name('<%=attribute.name%>') %></th>
            <% end -%>
            <th><%%= t('d.Action') %></th>
          </tr>
          </thead>

          <tbody>
          <%%= content_tag_for(:tr, @<%= plural_table_name %>) do |<%= singular_table_name %>| %>
          <% attributes.each do |attribute| -%>
              <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
          <% end -%>
          <td>
            <div class="btn-group">
              <%%= link_to  <%= singular_table_name %> ,class: "button is-link is-small" do %>
              <i class="fa fa-eye"></i>
              <%% end -%>
              <%%= link_to  edit_<%= singular_table_name %>_path(<%= singular_table_name %>) ,class: "button is-link is-small" do %>
              <i class="fa fa-edit"></i>
              <%% end -%>
              <%%= link_to <%= singular_table_name %>, method: :delete, data: { confirm: t('s.Suring') } ,class: "button is-link is-small" do %>
              <i class="fa fa-trash"></i>
              <%% end -%>
            </div>
          </td>
          <%% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
